{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020", "ES2020.String"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "src",
    "incremental": true
  },
  "include": ["src/**/*.ts"]
}
